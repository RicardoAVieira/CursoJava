package fundamentos;

public class NotacaoPonto26 {
	public static void main(String[] args) {
		
		double a = 2.3;
		String s = "Bom dia X";
		s.toUpperCase(); //Desta forma ele apenas converte mas n√£o armazina na variavel.
		String sConvertido;
		String sReplace;
		
		sConvertido = s.toUpperCase();
		sReplace = s.replace("X", "senhora!");
		sReplace = sReplace.toUpperCase();
		
		
		System.out.println(s);
		System.out.println(sConvertido);
		System.out.println(sReplace);
		System.out.println(sReplace);
	}
}
